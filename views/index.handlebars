<div class="container">
  {{#if user}}
    {{#if board}}
      <div class="col-xs-12 board">
        {{#each board}}
          <div class="col-xs-12 col-sm-3 board-column" data-guid="{{this.guid}}">
            <h3>{{this.title}}</h3>
            <div class="board-column-inner">
              {{#each this.content}}
                <div class="note" data-guid="{{this.guid}}" draggable="true">
                  <div class="note-actions"><a href="/note/{{this.guid}}" data-toggle="modal" data-target="#modalNote"><i class="fa fa-pencil"></i></a><a href="#"><i class="fa fa-bookmark"></i></a><a href="#"><i class="fa fa-envelope"></i></a></div>
                  <h4>{{this.title}}</h4>
                  {{#if tags }}
                    <p><small>{{this.tags}}</small></p>
                  {{/if}}
                  <p>{{this.content}}</p>
                </div>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p class="text-center">You have to connect your Evernote-Account to use flowd. Please edit your <a href="/account">account</a> settings!</p>
    {{/if}}
  {{else}}
    <h1>Scrum driven task management for Evernote</h1>
    <p>Please <a href="/login">Login</a> or <a href="/signup">Signup</a> to use flowd.</p>
  {{/if}}
  </div>
</div>

<div class="modal fade" id="modalNote" tabindex="-1" role="dialog" aria-labelledby="modalNoteLabel" aria-hidden="true"></div>