<div class="container">
  {{#if user}}
    {{#if board}}
      <a class="btn btn-sm btn-primary" href="#" data-toggle="modal" data-action="create" data-target="#modal"><i class="add fa fa-plus-circle"></i> Create note</a>
      <div class="col-xs-12 board">
        {{#each board}}
          <div class="col-xs-12 col-sm-3 board-column" data-guid="{{this.guid}}">
            <h3>{{this.title}}<span class="badge pull-right">{{this.content.length}}</span></h3>
            <div class="board-column-inner">
              {{#each this.content}}
                <div class="note" data-guid="{{this.guid}}" draggable="true">
                  {{#if this.updated}}
                    <div class="note-updated light">{{#formatDate this.updated }}{{/formatDate}}</div>
                  {{/if}}
                  <div class="note-actions"><i class="synced fa fa-check-circle hidden"></i>
                    <a data-toggle="modal" data-guid="{{this.guid}}" data-action="edit" data-target="#modal"><i class="fa fa-pencil"></i></a>
                    <a class="bookmark"><i class="bookmark fa fa-bookmark"></i></a>
                    {{!-- <a href="#" class="hybernate"><i class="hybernate fa fa-moon-o"></i></a> --}}
                    <a href="#" data-toggle="modal" data-guid="{{this.guid}}" data-action="send" data-target="#modal"><i class="fa fa-envelope"></i></a>
                  </div>
                  <h4 class="note-title">{{this.title}}</h4>
                  {{#if this.tags }}
                    <p class="note-tags">{{this.tags}}</p>
                  {{/if}}
                  <p class="note-content">{{this.content}}</p>
                </div>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p class="text-center">You have to connect your Evernote-Account to use flowd. Please edit your <a href="/account">account</a> settings!</p>
    {{/if}}
  {{else}}
    <section>
      <h1>Scrum driven task management for Evernote</h1>
      <p>Please <strong><a href="/login">Login</a></strong> or <strong><a href="/signup">Signup</a></strong> to use flowd.</p>
    </section>
    <section class="remark">
      <h3>Remark:</h3>
      <p><strong>flowd</strong> is under development running on the <a href="http://sandbox.evernote.com" >Evernote Sandbox</a> and not ready for production yet.</p>
      <p>If you just want to have a look on the application, feel free to use the demo-account:</p>
      <ul class="list-unstyled">
        <li>Login: <strong>qwer</strong></li>
        <li>Password: <strong>qwer</strong></li>
      </ul>
      <p></p>
    </section>

  {{/if}}
  </div>
</div>


<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalNoteLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Loading... </h4>
      </div>
      <div class="modal-body">
        <h3 class="modal-note-title"></h3>
        <div class="modal-note-tags"></div>
        <div class="modal-note-action"></div>
        <textarea class="modal-note-content" id="modal-note-content"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary disabled">Save changes</button>
      </div>
    </div>
  </div>
</div>