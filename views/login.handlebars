<div class="row">
  <div class="small-12 columns">
    <div class="small-12 medium-4 large-4 small-centered columns">
      {{#if message}}
        <p>{{message}}</p>
      {{/if}}
    </div>
    <form action="/login" method="post">
      <div class="small-12 medium-4 large-4 small-centered columns">
        <h3>Login</h3>
      </div>
      <div class="small-12 medium-4 large-4 small-centered columns">
        <label for="username">Username:</label>
        <input id="username" type="text" name="username"  placeholder="Type in username" />
      </div>
      <div class="small-12 medium-4 large-4 small-centered columns">
        <label for="password">Password:</label>
        <input id="password" type="password" name="password" placeholder="Type in password" />
      </div>
      <div class="small-12 medium-4 large-4 small-centered columns">
        <input class="button radius" type="submit" value="Submit"/>
      </div>
    </form>
  </div>
</div>

